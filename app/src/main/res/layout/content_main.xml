<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

    <ImageView
        android:id="@+id/btnAct1"
        android:layout_width="145dp"
        android:layout_height="132dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nav_host_fragment"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34"
        app:srcCompat="@drawable/profile_picture" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:text="Physics"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAct1"
        app:layout_constraintEnd_toEndOf="@+id/btnAct1"
        app:layout_constraintHorizontal_bias="0.676"
        app:layout_constraintStart_toStartOf="@+id/btnAct1"
        app:layout_constraintTop_toTopOf="@+id/btnAct1"
        app:layout_constraintVertical_bias="0.539" />

    <ImageView
        android:id="@+id/btnAct2"
        android:layout_width="145dp"
        android:layout_height="132dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nav_host_fragment"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34"
        app:srcCompat="@drawable/profile_picture" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="104dp"
        android:layout_height="59dp"
        android:layout_gravity="center_horizontal"
        android:text="Chemistry"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAct2"
        app:layout_constraintEnd_toEndOf="@+id/btnAct2"
        app:layout_constraintHorizontal_bias="0.731"
        app:layout_constraintStart_toStartOf="@+id/btnAct2"
        app:layout_constraintTop_toTopOf="@+id/btnAct2"
        app:layout_constraintVertical_bias="0.657" />

    <ImageView
        android:id="@+id/btnAct3"
        android:layout_width="145dp"
        android:layout_height="132dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nav_host_fragment"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.686"
        app:srcCompat="@drawable/profile_picture" />

    <ImageView
        android:id="@+id/btnAct4"
        android:layout_width="145dp"
        android:layout_height="132dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nav_host_fragment"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toStartOf="parent"
