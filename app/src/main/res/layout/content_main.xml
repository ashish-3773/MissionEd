        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:text="Maths"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAct3"
        app:layout_constraintEnd_toEndOf="@+id/btnAct3"
        app:layout_constraintHorizontal_bias="0.676"
        app:layout_constraintStart_toStartOf="@+id/btnAct3"
        app:layout_constraintTop_toTopOf="@+id/btnAct3"
        app:layout_constraintVertical_bias="0.54" />

